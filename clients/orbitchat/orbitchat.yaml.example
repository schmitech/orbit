# OrbitChat Configuration
# All non-secret settings. Secrets (auth credentials, adapter API keys) go in .env

# ---- Application ----
application:
  name: "ORBIT Chat"
  description: "Explore ideas with ORBIT's AI copilots, share context, and build together."
  inputPlaceholder: "Message ORBIT..."
  settingsAboutMsg: "ORBIT Chat"
  locale: "en-US"

# ---- API ----

# ---- Debug ----
debug:
  consoleDebug: false

# ---- Features ----
features:
  enableUpload: false
  enableAudioOutput: false
  enableAudioInput: false
  enableFeedbackButtons: false
  enableConversationThreads: true
  enableAutocomplete: false

# ---- Voice ----
voice:
  silenceTimeoutMs: 4000
  recognitionLanguage: ""

# ---- GitHub Stats ----
github:
  showStats: true
  owner: "schmitech"
  repo: "orbit"

# ---- Out of Service ----
# Set to a message string to show maintenance screen; null to disable
outOfServiceMessage: null

# ---- Usage Limits ----
limits:
  files:
    perConversation: 5
    maxSizeMB: 50
    totalFiles: 100
  conversations:
    maxConversations: 10
    messagesPerConversation: 1000
    messagesPerThread: 1000
    totalMessages: 10000
  messages:
    maxLength: 1000

# ---- Guest Limits (when auth is enabled and user is not signed in) ----
guestLimits:
  files:
    perConversation: 1
    maxSizeMB: 10
    totalFiles: 2
  conversations:
    maxConversations: 1
    messagesPerConversation: 10
    messagesPerThread: 10
    totalMessages: 10
  messages:
    maxLength: 500
  # Server-side rate limiting for unauthenticated /api/* requests (per IP).
  # Authenticated users are NOT rate-limited here (ORBIT server handles that).
  # When this section is absent, guest rate limiting is disabled (backward compatible).
  # rateLimit:
  #   enabled: true
  #   windowMs: 60000        # 1 minute window
  #   maxRequests: 20         # max requests per window per IP
  #   # Stricter limit for chat/streaming endpoints (POST to /chat or /stream)
  #   chat:
  #     windowMs: 60000
  #     maxRequests: 5

# ---- Authentication ----
# Credentials (domain, clientId, audience) go in .env as VITE_AUTH_* vars
auth:
  enabled: false

# ---- Header ----
header:
  enabled: false
  # Supports HTTPS URL or local file path.
  # Local file paths can be absolute or relative to orbitchat.yaml.
  # Example: "./public/logo.png" or "/home/ubuntu/assets/logo.png"
  # Legacy/fallback logo (used when theme-specific logo is not set)
  logoUrl: ""
  # Theme-specific logos (optional).
  # If empty/whitespace, defaults are used from public/:
  #   logoUrlLight -> /orbit-logo-light.png
  #   logoUrlDark  -> /orbit-logo-dark.png
  # (same location as favicon.svg)
  logoUrlLight: ""
  logoUrlDark: ""
  # Logo dimensions (optional). Controls the rendered size of the logo.
  # Accepts any valid CSS value: "40px", "2.5rem", "auto", etc.
  # Defaults: logoHeight "2.5rem" (≈40px), logoWidth "auto".
  logoHeight: ""
  logoWidth: ""
  bgColor: ""
  textColor: ""
  showBorder: true
  navLinks: []
  # navLinks:
  #   - label: "Home"
  #     url: "/"
  #   - label: "About"
  #     url: "/about"

# ---- Footer ----
footer:
  enabled: false
  text: ""
  bgColor: ""
  textColor: ""
  showBorder: false
  layout: "stacked" # "stacked" | "inline"
  align: "center" # "center" | "left"
  topPadding: "large" # "large" | "normal"
  navLinks: []

# ---- Adapters (metadata + URLs — API keys go in VITE_ADAPTER_KEYS env var) ----
# Each adapter must have a unique `id` to match its API key in VITE_ADAPTER_KEYS.
# The `name` is a display-only label and can be changed freely without affecting the key mapping.
adapters:
  - id: "simple-chat"
    name: "Simple Chat"
    apiUrl: "http://localhost:3000"
    description: "Basic chat interface using the default conversational agent."
  - id: "chat-with-files"
    name: "Chat With Files"
    apiUrl: "http://localhost:3000"
    description: "Supports chatting with document uploads and multimodal queries."
