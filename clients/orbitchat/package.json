{
  "name": "orbitchat",
  "private": false,
  "version": "3.1.1",
  "type": "module",
  "bin": {
    "orbitchat": "./bin/orbitchat.js",
    "orbitchat-daemon": "./orbitchat.sh"
  },
  "files": [
    "bin",
    "dist",
    "orbitchat.sh",
    "markdown-renderer/src",
    "!markdown-renderer/src/demo",
    "!markdown-renderer/src/demo/**",
    "!markdown-renderer/package.json",
    "!markdown-renderer/README.md",
    "markdown-renderer/LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "dev": "vite",
    "dev:local": "VITE_USE_LOCAL_API=true vite",
    "build": "tsc && vite build",
    "build:local": "VITE_USE_LOCAL_API=true tsc && vite build",
    "build:api": "cd ../node-api && npm run build && mkdir -p ../chat-app/src/api/local && cp dist/api.mjs ../chat-app/src/api/local/api.mjs && cp dist/api.mjs.map ../chat-app/src/api/local/api.mjs.map && cp dist/api.d.ts ../chat-app/src/api/local/api.d.ts",
    "dev:with-api": "npm run build:api && npm run dev:local",
    "lint": "npm run lint:app",
    "lint:app": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:renderer": "eslint --config markdown-renderer/eslint.config.js \"markdown-renderer/src/**/*.{ts,tsx}\"",
    "lint:all": "npm run lint:app && npm run lint:renderer",
    "preview": "vite preview",
    "preview:local": "VITE_USE_LOCAL_API=true vite preview",
    "test": "node --test 'tests/**/*.test.js'",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.15.0",
    "abcjs": "^6.5.2",
    "ajv": "^8.17.1",
    "dompurify": "^3.0.8",
    "express": "^5.0.1",
    "express-rate-limit": "^8.2.1",
    "http-proxy-middleware": "^3.0.5",
    "js-yaml": "^4.1.1",
    "katex": "^0.16.27",
    "lucide-react": "^0.469.0",
    "mermaid": "^11.12.2",
    "path": "^0.12.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.5.0",
    "recharts": "^3.7.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "unified": "^11.0.5",
    "vite-plugin-dts": "^4.5.4",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^5.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^15.0.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.2.0"
  }
}
