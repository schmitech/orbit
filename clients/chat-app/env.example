VITE_API_URL=http://localhost:3000

VITE_APPLICATION_NAME=ORBIT Chat
VITE_APPLICATION_DESCRIPTION=Explore ideas with ORBIT's AI copilots, share context, and build together.

# Feature Flags
VITE_ENABLE_UPLOAD=false
VITE_ENABLE_CONVERSATION_THREADS=false
# Controls the microphone/audio playback buttons in the UI
VITE_ENABLE_AUDIO_OUTPUT=false
# Set to 'true' to use local dist build instead of npm package
VITE_USE_LOCAL_API=true
# Enable API middleware to hide API keys from client (requires VITE_ADAPTERS)
VITE_ENABLE_API_MIDDLEWARE=false
# Path to local API (leave empty to use ./local/api.mjs from src/api/ directory)
# If using relative path like ../node-api/dist, it will automatically use ./local/api.mjs
# VITE_LOCAL_API_PATH=./local/api.mjs
VITE_CONSOLE_DEBUG=false

# Adapters Configuration for API Middleware Mode
# Format: JSON array of adapter objects
# For orbitchat CLI (server-side proxy): include name, apiKey, and apiUrl
# For static deployments (AWS Amplify, etc.): include name and apiUrl only
#   (API keys should be handled server-side via Lambda@Edge, CloudFront Functions, or API Gateway)
#
# Example for orbitchat CLI:
# VITE_ADAPTERS='[{"name":"Simple Chat","apiKey":"default-key","apiUrl":"https://orbit.example.com"},{"name":"Chat With Files","apiKey":"multimodal","apiUrl":"https://orbit.example.com"}]'
#
# Example for static deployments (no apiKey - handled server-side):
# VITE_ADAPTERS='[{"name":"Simple Chat","apiUrl":"https://orbit.example.com"},{"name":"Chat With Files","apiUrl":"https://orbit.example.com"}]'
VITE_ENABLE_FEEDBACK=false
VITE_GITHUB_OWNER=schmitech
VITE_GITHUB_REPO=orbit
VITE_SHOW_GITHUB_STATS=true
VITE_DEFAULT_KEY=default-key
VITE_LOCALE=en-US

# File Upload Limits
# Maximum number of files allowed per conversation
VITE_MAX_FILES_PER_CONVERSATION=5
# Maximum file size in MB (default: 50MB)
VITE_MAX_FILE_SIZE_MB=50
# Maximum total files across all conversations (default: 100, set to 0 for unlimited)
VITE_MAX_TOTAL_FILES=100

# Conversation Limits
# Maximum number of conversations (default: 10, set to 0 for unlimited)
VITE_MAX_CONVERSATIONS=10
# Maximum messages per conversation (default: 1000, set to 0 for unlimited)
VITE_MAX_MESSAGES_PER_CONVERSATION=1000
# Maximum total messages across all conversations (default: 10000, set to 0 for unlimited)
VITE_MAX_TOTAL_MESSAGES=10000

# Thread Limits
# Maximum messages per thread (default: 1000, set to 0 for unlimited)
VITE_MAX_MESSAGES_PER_THREAD=1000

# Message Limits
# Maximum message length in characters (default: 1000)
VITE_MAX_MESSAGE_LENGTH=500

# Display message indicating not operational
VITE_OUT_OF_SERVICE_MESSAGE=Temporarily Out of Service

# Default input message placeholder message
VITE_DEFAULT_INPUT_PLACEHOLDER=Ask Anything...
VITE_ENABLE_AUTOCOMPLETE=false