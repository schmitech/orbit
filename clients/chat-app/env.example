VITE_API_URL=http://localhost:3000
VITE_ENABLE_UPLOAD_BUTTON=false
VITE_ENABLE_CONVERSATION_THREADS=false
# Set to 'true' to use local dist build instead of npm package
VITE_USE_LOCAL_API=true
# Path to local API (leave empty to use ./local/api.mjs from src/api/ directory)
# If using relative path like ../node-api/dist, it will automatically use ./local/api.mjs
# VITE_LOCAL_API_PATH=./local/api.mjs
VITE_CONSOLE_DEBUG=false
VITE_ENABLE_FEEDBACK_BUTTONS=false
VITE_GITHUB_OWNER=schmitech
VITE_GITHUB_REPO=orbit
VITE_SHOW_GITHUB_STATS=true
VITE_DEFAULT_KEY=default-key
VITE_LOCALE=en-US

# File Upload Limits
# Maximum number of files allowed per conversation
VITE_MAX_FILES_PER_CONVERSATION=5
# Maximum file size in MB (default: 50MB)
VITE_MAX_FILE_SIZE_MB=50
# Maximum total files across all conversations (default: 100, set to 0 for unlimited)
VITE_MAX_TOTAL_FILES=100

# Conversation Limits
# Maximum number of conversations (default: 10, set to 0 for unlimited)
VITE_MAX_CONVERSATIONS=10
# Maximum messages per conversation (default: 1000, set to 0 for unlimited)
VITE_MAX_MESSAGES_PER_CONVERSATION=1000
# Maximum total messages across all conversations (default: 10000, set to 0 for unlimited)
VITE_MAX_TOTAL_MESSAGES=10000

# Message Limits
# Maximum message length in characters (default: 1000)
VITE_MAX_MESSAGE_LENGTH=500